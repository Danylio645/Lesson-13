*  {
	box-sizing: border-box;
	padding: 0;
	margin: 0;
}
body {
	font-family: "Slackside One", cursive;
	helight: 5000vh;
}
section {
	padding: 50px 20px; 
}
.header {
	border: 1px solid red;
	display: flex;
	align-items: center;
	gap: 50px;
	justify-content: center;
	background-image: url('./images/africa.jpg');
	background-repeat: no-repeat;
	background-size: cover;
    padding: 50px 20px;}
.header_title {
	color: #FFDAB9;
	font-size: 100px;
	text-shadow: -5px -5px 3px #333;
	border-bottom: 8px double;
}
.s-info {
	display: flex;
}
.s-info_content {
	display: flex;
	flex-direction: column;
	flex-grow: 1;
	border-left: 5px dotted;
	padding-left: 10px;
}
.s-info_text:nth-child(1) {
	align-self: flex-start;
	border-radius: 50%;
}
.s-info_text:nth-child(2) {
	align-self: center;
	border-radius: 0 50% 50% 50%; 
}
.s-info_text:nth-child(3) {
	align-self: flex-end;
	border-radius: 0 50%;
}
.s-info_text {
	background-color: #FFDAB9;
	width:  180px;
	height: 180px;
	font-size: 12px;
	padding: 15px;
	display:flex;
	align-items: center;
	justify-content: center;
	text-align: justify;
	
}
.s-info_img {
	margin-right: 20px;
}

	